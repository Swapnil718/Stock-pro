{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "server/public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/(.*)", "dest": "/api/index.js" },
    { "src": "^/$", "dest": "/server/public/index.html" },
    { "src": "^(?!/api/)(.*)$", "dest": "/server/public/$1" }
  ]
}
